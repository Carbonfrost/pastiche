#!/usr/bin/env bash
set -e
set -o pipefail

dir=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)

_trace(){
    # Disable output if performing a completion
    if [[ -n "$COMP_WORDS" ]]; then
        return
    fi
    printf >&2 "$@"
}

if [[ -n "${BUILD_FIRST}" ]]; then
    _trace "Building..."
    make -C "${dir}/.."
    _trace "\r\033[K"
fi

GOOS="$(go env GOOS)"
GOARCH="$(go env GOARCH)"

"${dir}/${GOOS}_${GOARCH}/pastiche" "$@"
